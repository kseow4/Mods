			<!-- Specular has the format: Metallic=R, Occlusion=G, Emission=B, Roughness=A -->
			<property name="Specular" value="#@modfolder:Assets/SciFiTextures.unity3d?assets/scifipainttextures/texture_3_specular.png,assets/scifipainttextures/texture_3_specular.png,assets/scifipainttextures/texture_3_specular.png,assets/scifipainttextures/texture_3_specular.png"/>
			<property name="Group" value="txGroupDecoration"/>
			<property name="GlobalUV" value="False" />
